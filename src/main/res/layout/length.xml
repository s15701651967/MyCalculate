<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="km"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="m"/>
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="dm"/>
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="cm"/>
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="mm"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="μm"/>
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="nm"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_marginLeft="3dp"
            android:id="@+id/btn7"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="7"
            android:textSize="20dp"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/btn8"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="8"
            android:textSize="20dp"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/btn9"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="9"
            android:textSize="20dp"
            android:padding="5dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/btn4"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="4"
            android:textSize="20dp"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/btn5"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="5"
            android:textSize="20dp"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/btn6"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="6"
            android:textSize="20dp"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/btnC"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="C"
            android:textSize="20dp"
            android:padding="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/btn1"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="20dp"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="2"
            android:textSize="20dp"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/btn003"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="3"
            android:textSize="20dp"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/btnDel"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="←"
            android:textSize="20dp"
            android:padding="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/btnpoint"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="."
            android:textSize="20dp"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/btn0"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="0"
            android:textSize="20dp"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/btnequal"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="="
            android:textSize="20dp"
            android:padding="5dp"
            />
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="长度转换"/>
</LinearLayout>